@model IEnumerable<project03.Models.entiy.LICHSUMUA>
@{
    ViewBag.Title = "QuanLiDonHang";
    Layout = "~/Views/Shared/Layoutadmin.cshtml";
}

<h2>Quản Lí Đơn Hàng</h2>

<div style="width:1480px;height:600px;">
    <table class="table table-sm table-dark">
        <tr>

            <th>
                @Html.DisplayNameFor(model => model.TENSANPHAM)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.THOIGIANMUA)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.SODIENTHOAI)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.SOLUONG)
            </th>

            <th>
                @Html.DisplayNameFor(model => model.GIA)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TONGTIEN)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TRANGTHAI)
            </th>
            <th>
                Đã nhận hàng
            </th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.TENSANPHAM)
                </td>

                <td>
                    @Html.DisplayFor(modelItem => item.THOIGIANMUA)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.SODIENTHOAI)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.SOLUONG)
                </td>

                <td>
                    @Html.DisplayFor(modelItem => item.GIA)
                </td>

                <td>
                    @Html.DisplayFor(modelItem => item.TONGTIEN)
                </td>
                <td>
                    @Html.Raw(item.TRANGTHAI == "đã hoàn thành" ? "<span style='background:green'>" + item.TRANGTHAI + "</span>" : item.TRANGTHAI)
                </td>
                <td>
                    <form action="/Admin/SuLiDon" method="post">
                        <input name="IDHang" value="@item.IDHANG" hidden />
                        <input name="donhang" value="2" hidden />
                        <input type="submit" value="đang gói hàng" />

                    </form>
                    <form action="/Admin/SuLiDon" method="post">
                        <input name="IDHang" value="@item.IDHANG" hidden />
                        <input name="donhang" value="3" hidden />
                        <input type="submit" value="đang giao" />
                    </form>
                    <button>                       
                        <a href="@Url.Action("ChiTietDonHang", new { id = item.IDHANG })" class="btn btn-link">
                            <i class="fas fa-info-circle"></i>
                        </a>
                    </button>
                </td>
            </tr>
        }

    </table>
</div>
@if (TempData["page_donhang_admin"] != null)
{
    <div class="footer">
        <div class="wrap">
            <div class="section group">
                <ul class="pagination">
                    <li class="btn btn-warning"><<</li>
                    @for (int i = 1; i <= int.Parse(TempData["page_donhang_admin"].ToString()); i++)
                    {

                        <li class="btn btn-warning"> <a href="/Admin/QuanLiDonHangwithpage?page=@i">@i</a> </li>
                    }
                    <li class="btn btn-warning">>></li>
                </ul>
            </div>
        </div>
    </div>
}



