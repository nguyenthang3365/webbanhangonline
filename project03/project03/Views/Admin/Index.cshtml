@model project03.Models.entiy.TAIKHOAN
@{
    ViewBag.Title = "Admin";
    Layout = "~/Views/Shared/index2.cshtml";
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Login</title>
    <style>
        body {
            font-family: Arial, Helvetica, sans-serif;
        }

        .container {
            width: 300px;
            margin: 0 auto;
            padding: 20px;
            border: 1px solid #ccc;
            border-radius: 5px;
            background-color: #f9f9f9;
        }

        .form-group {
            margin-bottom: 15px;
        }

        label {
            display: block;
            margin-bottom: 5px;
        }

        input[type="text"],
        input[type="password"] {
            width: 100%;
            padding: 10px;
            border: 1px solid #ccc;
            border-radius: 3px;
        }

        input[type="submit"] {
            width: 100%;
            padding: 10px;
            background-color: #007bff;
            color: #fff;
            border: none;
            border-radius: 3px;
            cursor: pointer;
        }

            input[type="submit"]:hover {
                background-color: #0056b3;
            }
    </style>
</head>
<body>
    <div class="container">
        <h2>Đăng Nhập Admin</h2>
        @using (Html.BeginForm("Index", "Admin", FormMethod.Post))
        {
            @Html.AntiForgeryToken()
            <div class="form-group">
                <label for="TENTAIKHOAN">TÊN TÀI KHOẢN :</label>
                @Html.TextBoxFor(model => model.TENTAIKHOAN, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.TENTAIKHOAN, "", new { @class = "text-danger" })
            </div>
            <div class="form-group">
                <label for="MATKHAU">MẬT KHẨU:</label>
                @Html.PasswordFor(model => model.MATKHAU, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.MATKHAU, "", new { @class = "text-danger" })
            </div>
            <div class="form-group">
                <input type="submit" value="ĐĂNG NHẬP">
            </div>
            <p style="color:red"> @ViewBag.err</p>
        }
    </div>

    <div>
        @Html.ActionLink("Đăng Kí", "Index", "Register")
    </div>
</body>
</html>
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}

